<%
 mf = migration_fee
 url_path = request.env['PATH_INFO'].to_s
 byron_ep = "/byron-wallets/#{wallet_id}"
 shelley_ep = "/wallets/#{wallet_id}"
 byron_migr_ep = "/byron-wallets-migration-fee/#{wallet_id}"
 shelley_migr_ep = "/wallets-migration-fee/#{wallet_id}"
%>

<div class="list-group">
